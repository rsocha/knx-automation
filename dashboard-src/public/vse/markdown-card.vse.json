{
  "id": "markdown-card",
  "name": "Markdown Card",
  "description": "Titel mit Icon/Emoji und optionalem Untertitel im Markdown-Stil",
  "category": "Layout",
  "author": "EDOMI VSE",
  "version": "1.0",
  "width": 300,
  "height": 80,
  "render": "markdownCard",
  "inputs": {},
  "variables": {
    "var1": { "name": "Icon (MDI/Emoji)", "type": "icon", "default": "⚡" },
    "var2": { "name": "Untertitel", "type": "text", "default": "Untertitel oder Beschreibung" },
    "var3": { "name": "Titel Größe (em)", "type": "text", "default": "1.3" },
    "var4": { "name": "Untertitel Größe (em)", "type": "text", "default": "0.85" },
    "var5": { "name": "Titel Gewicht", "type": "text", "default": "600" },
    "var6": { "name": "Untertitel Gewicht", "type": "text", "default": "400" },
    "var7": { "name": "Titel Deckkraft", "type": "text", "default": "0.95" },
    "var8": { "name": "Untertitel Deckkraft", "type": "text", "default": "0.7" },
    "var9": { "name": "Padding Oben (px)", "type": "number", "default": 12 },
    "var10": { "name": "Padding Rechts (px)", "type": "number", "default": 10 },
    "var11": { "name": "Padding Unten (px)", "type": "number", "default": 8 },
    "var12": { "name": "Padding Links (px)", "type": "number", "default": 10 },
    "var13": { "name": "Border-Radius OL (px)", "type": "number", "default": 16 },
    "var14": { "name": "Border-Radius OR (px)", "type": "number", "default": 16 },
    "var15": { "name": "Border-Radius UR (px)", "type": "number", "default": 0 },
    "var16": { "name": "Border-Radius UL (px)", "type": "number", "default": 0 }
  }
}

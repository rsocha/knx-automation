{
  "id": "gauge-barometer",
  "name": "Gauge Barometer",
  "description": "Rundes Gauge mit Zeiger, Skala, optionalem Referenzzeiger (KO2) und dynamischer Rahmenfarbe",
  "category": "Sensoren",
  "author": "VSE",
  "version": "1.0",
  "width": 200,
  "height": 200,
  "render": "gaugeBarometer",
  "inputs": {
    "ko1": { "name": "Sensorwert", "type": "number" },
    "ko2": { "name": "Referenz", "type": "number" }
  },
  "variables": {
    "var1": { "name": "Minimum", "type": "number", "default": 960 },
    "var2": { "name": "Maximum", "type": "number", "default": 1060 },
    "var3": { "name": "Ring-Typ (open/full/half)", "type": "text", "default": "open" },
    "var4": { "name": "Zeiger-Farbe (R,G,B)", "type": "color", "default": "255,193,7" },
    "var5": { "name": "Dezimalstellen", "type": "number", "default": 1 },
    "var6": { "name": "Ring-Farbe (R,G,B)", "type": "color", "default": "60,60,60" },
    "var7": { "name": "Haupt-Ticks", "type": "number", "default": 10 },
    "var8": { "name": "Unter-Ticks", "type": "number", "default": 5 },
    "var9": { "name": "Wert anzeigen", "type": "bool", "default": "1" },
    "var10": { "name": "Einheit anzeigen", "type": "bool", "default": "1" },
    "var11": { "name": "Gauge-Größe (%)", "type": "number", "default": 90 },
    "var12": { "name": "Ring-Breite", "type": "number", "default": 6 },
    "var13": { "name": "Zeiger-Breite", "type": "number", "default": 1.5 },
    "var14": { "name": "Zeiger-Länge (%)", "type": "number", "default": 85 },
    "var15": { "name": "Label Text", "type": "text", "default": "" },
    "var16": { "name": "Label Icon/Emoji", "type": "text", "default": "" },
    "var17": { "name": "Gauge Icon (MDI)", "type": "icon", "default": "gauge" },
    "var18": { "name": "Schwelle HIGH ab", "type": "number", "default": 2000 },
    "var19": { "name": "Schwelle MEDIUM ab", "type": "number", "default": 500 },
    "var20": { "name": "Label Deckkraft (0-100)", "type": "number", "default": 70 },
    "unit": { "name": "Einheit", "type": "text", "default": "mbar" }
  }
}

{
  "id": "sensor_card_custom",
  "name": "Sensor Card",
  "category": "sensor",
  "version": "1.0",
  "author": "Custom Widget",
  "xsize": 200,
  "ysize": 50,
  "description": "Kompakte Sensorkarte mit MDI-Icon, Label und Wert im Home Assistant Stil",
  "render": "sensorCard",
  
  "vars": {
    "var1": {"name": "Icon (MDI)", "type": "text", "default": "thermometer"},
    "var2": {"name": "Titel", "type": "text", "default": "Aussen Temperatur"},
    "var3": {"name": "Dezimalstellen", "type": "select", "default": "1", "options": ["0", "1", "2", "3"]},
    "var4": {"name": "Icon-Größe", "type": "text", "default": "24"},
    "var5": {"name": "Label-Größe", "type": "text", "default": "0.85"},
    "var6": {"name": "Label-Gewicht", "type": "text", "default": "500"},
    "var7": {"name": "Label-Deckkraft", "type": "text", "default": "0.7"},
    "var8": {"name": "Wert-Größe", "type": "text", "default": "1.1"},
    "var9": {"name": "Wert-Gewicht", "type": "text", "default": "600"},
    "var10": {"name": "Wert-Deckkraft", "type": "text", "default": "0.9"},
    "var11": {"name": "Icon-Farbe RGB", "type": "text", "default": "100,181,246"},
    "var12": {"name": "Radius", "type": "text", "default": "16"},
    "var13": {"name": "Rahmen-Deckkraft", "type": "text", "default": "0.3"}
  }
}

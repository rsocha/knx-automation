{
  "id": "media-player",
  "name": "Media Player (Sonos)",
  "description": "Musikplayer mit Cover, Titel, Steuerung und Lautstärke",
  "category": "Media",
  "author": "KNX Automation",
  "version": "1.2",
  "width": 340,
  "height": 480,
  "render": "mediaPlayer",
  "inputs": {
    "ko1": { "name": "Titel (A4)", "type": "text", "description": "Aktueller Songtitel" },
    "ko2": { "name": "Interpret (A5)", "type": "text", "description": "Aktueller Interpret" },
    "ko3": { "name": "Album (A6)", "type": "text", "description": "Album bei Musikwiedergabe" },
    "ko13": { "name": "Sender (A3)", "type": "text", "description": "Sendername bei Radio" },
    "ko4": { "name": "Cover URL (A7)", "type": "text", "description": "URL zum Albumcover" },
    "ko5": { "name": "Status (A2)", "type": "number", "description": "1=Play, 2=Stop, 3=Pause" },
    "ko6": { "name": "Lautstärke (A8)", "type": "number", "description": "0-100" },
    "ko7": { "name": "Position (s)", "type": "number", "description": "Position in Sekunden" },
    "ko8": { "name": "Dauer (s)", "type": "number", "description": "Gesamtdauer in Sekunden" },
    "ko9": { "name": "Play senden (E1)", "type": "number", "description": "1 senden = Play" },
    "ko14": { "name": "Pause senden (E2)", "type": "number", "description": "1 senden = Pause" },
    "ko15": { "name": "Stop senden (E3)", "type": "number", "description": "1 senden = Stop" },
    "ko10": { "name": "Nächster (E5)", "type": "number", "description": "1 senden = nächster" },
    "ko11": { "name": "Vorheriger (E4)", "type": "number", "description": "1 senden = vorheriger" },
    "ko16": { "name": "Vorspulen (E6)", "type": "number", "description": "1 senden = +30s" },
    "ko17": { "name": "Zurückspulen (E7)", "type": "number", "description": "1 senden = -30s" },
    "ko12": { "name": "Lautstärke setzen (E9)", "type": "number", "description": "0-100 senden" },
    "ko18": { "name": "Mute senden (E8)", "type": "number", "description": "1=Mute, 0=Unmute" },
    "ko19": { "name": "Mute Status", "type": "number", "description": "1=Muted" }
  },
  "variables": {
    "var1": { "name": "Test-Titel", "type": "text", "default": "Awesome Title" },
    "var2": { "name": "Test-Interpret", "type": "text", "default": "Famous Artist" },
    "var3": { "name": "Test-Album", "type": "text", "default": "Well known album" },
    "var4": { "name": "Akzentfarbe (R,G,B)", "type": "color", "default": "180,140,100" },
    "var5": { "name": "Hintergrundfarbe (R,G,B)", "type": "color", "default": "30,28,26" },
    "var6": { "name": "Hintergrund Deckkraft (%)", "type": "number", "default": 95 },
    "var7": { "name": "Rahmenfarbe (R,G,B)", "type": "color", "default": "255,255,255" },
    "var8": { "name": "Rahmen Deckkraft (%)", "type": "number", "default": 8 },
    "var12": { "name": "Rahmenstärke (px)", "type": "number", "default": 1.5 },
    "var9": { "name": "Textfarbe hell", "type": "bool", "default": "1" },
    "var10": { "name": "Border-Radius (px)", "type": "number", "default": 24 },
    "var11": { "name": "Cover Border-Radius (px)", "type": "number", "default": 16 }
  }
}
